Bootstrap: docker
From: ubuntu:24.04

%post
    # Update package lists and install 'libosmesa6-dev'
    apt-get update
    apt-get install -y libosmesa6-dev python3.12 python3-pip python3.12-dev python3.12-minimal python3.12-venv build-essential patchelf git slurm-client libegl1 libegl-dev
    apt-get clean

%runscript
    # Add a runscript to execute a simple test command inside the container
    echo "libosmesa6-dev has been successfully installed!"

